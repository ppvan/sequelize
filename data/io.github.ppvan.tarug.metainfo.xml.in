<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
    <id>io.github.ppvan.tarug</id>

    <name>tarug</name>
    <summary>A minimal Postgres SQL client</summary>

    <metadata_license>MIT</metadata_license>
    <project_license>GPL-3.0-or-later</project_license>

    <recommends>
        <display_length compare="ge">960</display_length>
    </recommends>

    <description>
        <p>tarug is a modern, yet another Postgres SQL client, build with GTK 4 and Libadwaita</p>
        <ul>
            <li>Create connection, import, export connection to database</li>
            <li>View tables, scshema, views, columns, indexes, foreign key</li>
            <li>Execute query, query history</li>
        </ul>

        <p>
            This project is not a part of or affiliated with PostgreSQL.
        </p>
    </description>
    <content_rating type="oars-1.1" />
    <provides>
        <id>me.ppvan.tarug</id>
    </provides>
    <replaces>
        <id>me.ppvan.tarug</id>
    </replaces>
    <url type="homepage">https://github.com/ppvan/tarug</url>
    <url type="bugtracker">https://github.com/ppvan/tarug/issues</url>

    <developer id="io.github.ppvan">
